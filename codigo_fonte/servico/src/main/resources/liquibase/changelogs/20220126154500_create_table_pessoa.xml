<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

	<changeSet id="20220126154500-1" author="FernandoMF-dev" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
		<createTable tableName="TB_PESSOA">
			<column name="ID_PESSOA" type="BIGINT">
				<constraints nullable="false"/>
			</column>

			<column name="NOME" type="VARCHAR(100)">
				<constraints nullable="false"/>
			</column>

			<column name="SOBRENOME" type="VARCHAR(100)">
				<constraints nullable="false"/>
			</column>

			<column name="DATA_NASCIMENTO" type="DATE">
				<constraints nullable="false"/>
			</column>

			<column name="CIDADE" type="VARCHAR(50)">
				<constraints nullable="false"/>
			</column>

			<column name="ESTADO" type="VARCHAR(2)">
				<constraints nullable="false"/>
			</column>

			<column name="TELEFONE" type="VARCHAR(20)"/>

			<column name="EMAIL" type="VARCHAR(200)"/>

			<column name="EXCLUIDO" type="BOOLEAN" defaultValueBoolean="false">
				<constraints nullable="false"/>
			</column>
		</createTable>

		<rollback>
			<dropTable tableName="TB_PESSOA"/>
		</rollback>
	</changeSet>

	<changeSet id="20220126154500-2" author="FernandoMF-dev" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
		<addPrimaryKey tableName="TB_PESSOA" columnNames="ID_PESSOA" constraintName="PK_PESSOA"/>

		<rollback>
			<dropPrimaryKey tableName="TB_PESSOA" constraintName="PK_PESSOA"/>
		</rollback>
	</changeSet>

	<changeSet id="20220126154500-3" author="FernandoMF-dev" objectQuotingStrategy="QUOTE_ALL_OBJECTS">
		<createSequence sequenceName="SEQ_PASSE" startValue="1" incrementBy="1"/>

		<rollback>
			<dropSequence sequenceName="SEQ_PASSE"/>
		</rollback>
	</changeSet>

</databaseChangeLog>
